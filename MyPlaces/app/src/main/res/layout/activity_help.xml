<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".ui.HelpActivity">

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:layout_gravity="center">

      <ImageView
          android:id="@+id/imageViewHelp"
          android:layout_marginStart="5dp"
          android:layout_width="180dp"
          android:layout_height="180dp"
          android:layout_gravity="center"
           />
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_marginStart="5dp"
          android:layout_height="200dp"
          android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:orientation="horizontal">
          <TextView
              android:layout_width="match_parent"
              android:layout_height="60dp"
              android:hint="First Name: "
              android:textColor="@color/textColor"
              android:layout_weight="2"/>
          <EditText
              android:id="@+id/editTextFirstNameHelp"
              android:layout_width="match_parent"
              android:layout_height="60dp"
              android:textColor="@color/textColor"
              android:layout_weight="1"
              />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:orientation="horizontal">
          <TextView
              android:layout_width="match_parent"
              android:layout_height="60dp"
              android:hint="Last Name: "
              android:layout_weight="2"
              android:textColor="@color/textColor"/>
          <EditText
              android:id="@+id/editTextLastNameHelp"
              android:layout_width="match_parent"
              android:layout_height="60dp"
              android:textColor="@color/textColor"
              android:layout_weight="1"
              />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:orientation="horizontal">
          <TextView
              android:layout_width="match_parent"
              android:layout_height="60dp"
              android:hint="Phone: "
              android:layout_weight="2"
              android:textColor="@color/textColor"/>
          <EditText
              android:id="@+id/editTextPhoneHelp"
              android:layout_width="match_parent"
              android:layout_height="60dp"
              android:textColor="@color/textColor"
              android:layout_weight="1"
              />
        </LinearLayout>
      </LinearLayout>
    </LinearLayout>
    <EditText
        android:id="@+id/editTextTypeOfAnymalHelp"
        android:textColor="@color/textColor"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        />
    <EditText
        android:gravity="top|start"
        android:id="@+id/editTextDescribeProblemHelp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textColor="@color/textColor"
       />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center|start"
        android:hint="Needs:"
        android:textStyle="bold"
        android:textSize="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
      <CheckBox
          android:id="@+id/checkBoxFoodHelp"
          android:hint="Food"
          android:layout_width="175dp"
          android:layout_height="50dp"/>
      <CheckBox
          android:id="@+id/checkBoxMedicineHelp"
          android:hint="Medicine"
          android:layout_width="175dp"
          android:layout_height="50dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
      <CheckBox
          android:id="@+id/checkBoxWaterHelp"
          android:hint="Water"
          android:layout_width="175dp"
          android:layout_height="50dp"/>
      <CheckBox
          android:id="@+id/checkBoxVetHelp"
          android:hint="Vet"
          android:layout_width="175dp"
          android:layout_height="50dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
      <CheckBox
          android:id="@+id/checkBoxAdoptionHelp"
          android:hint="Adoption"
          android:layout_width="175dp"
          android:layout_height="50dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
    <Button
        android:id="@+id/btnIHelpedHelp"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:textColor="@color/white"
        android:background="@color/darkgreen"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:text="I helped"/>

    <Button
        android:id="@+id/btnNotThereHelp"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:textColor="@color/white"
        android:background="@color/red"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:text="Not there"/>
    </LinearLayout>
</LinearLayout>