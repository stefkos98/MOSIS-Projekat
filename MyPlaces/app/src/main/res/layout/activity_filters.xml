<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:orientation="vertical"
    android:layout_height="500dp"
    android:layout_gravity="center|center"
    tools:context=".ui.FiltersActivity">
  <TextView
      android:layout_width="300dp"
      android:layout_height="wrap_content"
    android:gravity="center"
    android:text="Filters"
      android:textSize="30dp"/>
  <Switch
      android:id="@+id/switchFilterFood"
      android:layout_width="250dp"
      android:layout_height="60dp"
      android:layout_gravity="center"
      android:text="Food" />
  <Switch
      android:id="@+id/switchFilterMedicine"
      android:layout_width="250dp"
      android:layout_height="60dp"
      android:layout_gravity="center"
      android:text="Medicine" />
  <Switch
      android:id="@+id/switchFilterWater"
      android:layout_width="250dp"
      android:layout_height="60dp"
      android:layout_gravity="center"
      android:text="Water" />
  <Switch
      android:id="@+id/switchFilterVet"
      android:layout_width="250dp"
      android:layout_height="60dp"
      android:layout_gravity="center"
      android:text="Vet" />
  <Switch
      android:id="@+id/switchFilterAdoption"
      android:layout_width="250dp"
      android:layout_height="60dp"
      android:layout_gravity="center"
      android:text="Adoption" />
  <Spinner
      android:id="@+id/animaltype_spinnerFilter"
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:hint="Type of Animal"/>
  <Button
      android:id="@+id/btnCloseFilter"
      android:layout_width="175dp"
      android:layout_height="50dp"
      android:layout_gravity="center"
      android:layout_margin="10dp"
      android:background="@color/lightgreen"
      android:text="Close"
      android:textColor="@color/white"
      android:textSize="20dp" />

  </LinearLayout>