<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.ProfileActivity"
    tools:showIn="@layout/activity_profile">

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/photoProfileP"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            app:srcCompat="@drawable/mosis_logo_tekst" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/txtFirstNameP"
            android:layout_width="175dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:hint="First Name"
            android:singleLine="true"></EditText>

        <EditText
            android:id="@+id/txtLastNameP"
            android:layout_width="175dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:hint="Last Name"
            android:singleLine="true"></EditText>
    </LinearLayout>

    <EditText
        android:id="@+id/txtUsernameP"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:hint="Username"
        android:singleLine="true"></EditText>

    <EditText
        android:id="@+id/txtEmailP"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:hint="Email Address"
        android:singleLine="true"></EditText>

    <EditText
        android:id="@+id/txtPhoneP"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:hint="Phone Number"
        android:singleLine="true"></EditText>

    <EditText
        android:id="@+id/txtPasswordP"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:hint="Password"
        android:inputType="textPassword"
        android:singleLine="true"></EditText>

    <EditText
        android:id="@+id/txtConfirmPasswordP"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:singleLine="true"></EditText>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtTakeAPhotoP"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_gravity="left"
            android:layout_marginLeft="6dp"
            android:gravity=""
            android:text="Change a Photo" />

        <ImageView
            android:id="@+id/imageChangePhoto"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_marginLeft="70dp"
            android:background="@drawable/camera" />
    </LinearLayout>

    <Switch
        android:id="@+id/switch2"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:text="Background Service" />

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSaveChangesP"
            android:layout_width="175dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@color/darkgreen"
            android:text="@string/saveChanges"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnDeleteProfileP"
            android:layout_width="175dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:background="@color/red"
            android:text="@string/deleteProfile"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </LinearLayout>
</LinearLayout>