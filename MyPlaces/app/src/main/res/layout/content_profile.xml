<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.ProfileActivity"
    tools:showIn="@layout/activity_profile"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/mosis_logo_tekst" />

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/txtFirstNameP"
            android:layout_width="175dp"
            android:layout_height="60dp"
            android:hint="First Name"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:singleLine="true">
        </EditText>

        <EditText
            android:id="@+id/txtLastNameP"
            android:layout_width="175dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:hint="Last Name"
            android:layout_gravity="center"
            android:singleLine="true">
        </EditText>
    </LinearLayout>

    <EditText
        android:id="@+id/txtUsernameP"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:hint="Username"
        android:layout_gravity="center"
        android:singleLine="true">
    </EditText>

    <EditText
        android:id="@+id/txtEmailP"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:hint="Email Address"
        android:layout_gravity="center"
        android:singleLine="true">
    </EditText>

    <EditText
        android:id="@+id/txtPhoneP"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:hint="Phone Number"
        android:layout_gravity="center"
        android:singleLine="true">
    </EditText>

    <EditText
        android:id="@+id/txtPasswordP"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_gravity="center"
        android:singleLine="true">
    </EditText>

    <EditText
        android:id="@+id/txtConfirmPasswordP"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:layout_gravity="center"
        android:singleLine="true">
    </EditText>
    <LinearLayout
        android:layout_width="400dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_height="70dp">
        <TextView
            android:id="@+id/txtTakeAPhotoP"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_gravity="left"
            android:layout_marginLeft="6dp"
            android:gravity=""
            android:text="Take a Photo" />
        <ImageView
            android:layout_marginLeft="40dp"
            android:layout_gravity="right"
            android:layout_width="100dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/camera" />
    </LinearLayout>

        <Switch
            android:id="@+id/switch2"
            android:layout_width="400dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:text="Background Service" />
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:orientation="horizontal">
    <Button
        android:id="@+id/btnSaveChangesP"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:textColor="@color/white"
        android:background="@color/darkgreen"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:text="@string/saveChanges"/>

        <Button
            android:id="@+id/btnDeleteProfileP"
            android:textAllCaps="false"
            android:layout_width="175dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/white"
            android:background="@color/red"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:text="@string/deleteProfile"/>
    </LinearLayout>
</LinearLayout>